@using Abp.Authorization.Users
@using Abp.MultiTenancy
@using NEXARC.MultiTenancy
@using NEXARC.Web.Models.Common.Modals
@using NEXARC.Web.Startup
@using NEXARC.Domain.Enumerations;
@using NEXARC.Extensions;
@model Abp.Application.Services.Dto.PagedResultDto<NEXARC.MultiTenancy.Dto.TenantDto>
@{
    ViewBag.Title = L("Tenants");
    ViewBag.CurrentPageName = PageNames.Tenants;
}
@section scripts
    {
    <environment names="Development">
    </environment>

    <environment names="Staging,Production">
    </environment>

    <script src="~/view-resources/Views/Tenants/Index.js" asp-append-version="true"></script>
    <!-- Page JS Plugins -->
    <script src="./oneui/src/assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="./oneui/src/assets/js/plugins/datatables/buttons/dataTables.buttons.min.js"></script>
    <script src="./oneui/src/assets/js/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="./oneui/src/assets/js/plugins/datatables/buttons/buttons.print.min.js"></script>
    <script src="./oneui/src/assets/js/plugins/datatables/buttons/buttons.html5.min.js"></script>
    <script src="./oneui/src/assets/js/plugins/datatables/buttons/buttons.flash.min.js"></script>
    <script src="./oneui/src/assets/js/plugins/datatables/buttons/buttons.colVis.min.js"></script>
    <!-- Page JS Code -->
    <script src="./oneui/src/assets/js/pages/be_tables_datatables.js"></script>
    <script>jQuery(function () { One.helpers(['table-tools-checkable', 'table-tools-sections']); });</script>


    <script>
        $("#search_table").on("keyup search input paste cut", function (e) {
            e.preventDefault();
            if ($('.table').length > 0) {
                if ($.fn.dataTable.isDataTable('.table')) {
                    table = $('.table').DataTable();
                    table.search(this.value).draw();
                }
            }
        });

        $('.export-csv').click(function () {
            $('.buttons-csv').trigger("click");;
        });
        $('.export-copy').click(function () {
            $('.buttons-copy').trigger("click");;
        });
        $('.export-print').click(function () {
            $('.buttons-print').trigger("click");;
        });
    </script>
}

<div class="content" style="padding: 10px !important;">

    <div class="block">
        <div class="block-header ribbon ribbon-primary ribbon-left ribbon-modern">
            <div class="ribbon-box">
                Tenants
                <i class="fa fa-user"></i>
            </div>
            <h3 class="block-title"></h3>
            <div class="block-options">
                <button type="button" class="btn btn-sm btn-square text-primary btn-primary-custom" data-toggle="modal" data-target="#TenantCreateModal">
                    @*<button type="button" class="btn btn-square btn-outline-primary">Primary</button>*@
                    <i class="si si-pencil"></i>&nbsp;<span>@L("Create")</span>
                </button>
                <button type="button" class="btn btn-sm btn-square text-danger delete-tenant-multi btn-danger-custom">
                    <i class="far fa-trash-alt"></i>&nbsp;<span>Delete</span>
                </button>
                <button type="button" class="btn btn-sm btn-square text-primary dropdown-toggle btn-primary-custom" id="dropdown-default-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="si si-note"></i> Export
                </button>
                <div class="dropdown-menu font-size-sm" aria-labelledby="dropdown-default-primary">
                    <a class="dropdown-item export-copy" href="javascript:void(0)">
                        <i class="si si-docs"></i>&nbsp;
                        Copy
                    </a>
                    <a class="dropdown-item export-csv" href="javascript:void(0)">
                        <i class="si si-doc"></i>&nbsp;
                        CVS
                    </a>
                    <a class="dropdown-item export-print" href="javascript:void(0)">
                        <i class="si si-printer"></i>&nbsp;
                        Print
                    </a>
                </div>
                <button type="button" class="btn btn-sm btn-square btn-dark" data-toggle="block-option" data-action="fullscreen_toggle"><i class="si si-size-fullscreen"></i></button>
            </div>
        </div>
        <div class="block-content">

            <!-- DataTables init on table by adding .js-dataTable-buttons class, functionality is initialized in js/pages/be_tables_datatables.min.js which was auto compiled from _es6/pages/be_tables_datatables.js -->
            <table id="dtable" class="table table-striped table-vright js-dataTable-buttons dataTable no-footer  js-table-checkable">
                <thead>
                    <tr>
                        <th class="text-center noExport" style="width: 70px;">
                            <div class="custom-control custom-checkbox d-inline-block">
                                <input type="checkbox" class="custom-control-input" id="check-all" name="check-all">
                                <label class="custom-control-label" for="check-all"></label>
                            </div>
                        </th>
                        <th class="font-size-sm text-center noExport" style="width: 80px;">@L("Actions")</th>
                        <th class="font-size-sm d-none d-sm-table-cell">@L("TenancyName")</th>
                        <th class="font-size-sm d-none d-sm-table-cell">@L("Name")</th>
                        <th>@L("IsActive")</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var tenant in Model.Items)
                    {
                        <tr>
                            <td class="text-center">
                                <div class="custom-control custom-checkbox d-inline-block">
                                    <input type="checkbox" class="custom-control-input" dataclass="record-key" data-id="@tenant.Id" id="row_@tenant.Id" name="row_@tenant.Id">
                                    <label class="custom-control-label" for="row_@tenant.Id"></label>
                                </div>
                            </td>
                            <td class="d-sm-table-cell font-size-sm">
                                <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" id="dropdown-default-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span>@L("Actions")</span>
                                    <b class="caret"></b>
                                </button>
                                <div class="dropdown-menu font-size-sm" aria-labelledby="dropdown-default-primary">
                                    <a href="#" class="dropdown-item edit-tenant" data-tenant-id="@tenant.Id" data-toggle="modal" data-target="#TenantEditModal">
                                        <i class="fa fa-edit"></i>&nbsp;@L("Edit")
                                    </a>
                                    <a href="#" class="delete-tenant dropdown-item" data-tenant-id="@tenant.Id" data-tenant-name="@tenant.TenancyName">
                                        <i class="fa fa-trash"></i>&nbsp;@L("Delete")
                                    </a>
                                </div>
                            </td>
                            <td class="font-size-sm">
                                @tenant.TenancyName
                            </td>
                            <td class="font-size-sm">
                                @tenant.Name
                            </td>
                            <td>
                                <input type="checkbox" disabled="disabled" @(tenant.IsActive ? Html.Raw("checked=\"checked\"") : null)>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- END Dynamic Table with Export Buttons -->
</div>
<!-- END Page Content -->

<div class="modal fade" id="TenantCreateModal" tabindex="-1" tenant="dialog" aria-labelledby="TenantCreateModal" aria-hidden="true">
    <div class="modal-dialog" tenant="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewTenant")))
            <form name="TenantCreateForm" tenant="form" novalidate class="form-horizontal form-validation go-bottom customform">
                <div class="modal-body">

                    <div class="block mb0">
                        <ul class="nav nav-tabs nav-tabs-alt" data-toggle="tabs" tenant="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" href="#general">General</a>
                            </li>

                        </ul>
                        <div class="block-content tab-content">
                            <div class="tab-pane active" id="btabs-alt-static-home" tenant="tabpanel">
                                <div class="form-group">
                                    <label for="TenancyName">@L("TenancyName")</label>
                                    <input required id="TenancyName" class="form-control form-control-sm"
                                           name="TenancyName" placeholder="@L("TenancyName")"
                                           maxlength="@AbpTenantBase.MaxTenancyNameLength" minlength="2">
                                </div>
                                <div class="form-group">
                                    <label for="Name">@L("Name")</label>
                                    <input required id="Name" class="form-control form-control-sm"
                                           name="Name" placeholder="@L("Name")"
                                           maxlength="@Tenant.MaxNameLength" minlength="2">
                                </div>
                                <div class="form-group">
                                    <label for="ConnectionString">@L("DatabaseConnectionString") (@L("Optional"))</label>
                                    <input required id="ConnectionString" class="form-control form-control-sm"
                                           name="ConnectionString" placeholder="@L("ConnectionString")"
                                           maxlength="@AbpTenantBase.MaxConnectionStringLength">
                                </div>
                                <div class="form-group">
                                    <label for="AdminEmailAddress">@L("AdminEmailAddress")</label>
                                    <input required type="email" id="AdminEmailAddress" class="form-control form-control-sm"
                                           name="AdminEmailAddress" placeholder="@L("AdminEmailAddress")"
                                           maxlength="32">
                                </div>
                                <div class="form-group">
                                    <label for="ConnectionString">@L("IsActive")</label>
                                    <input type="checkbox" name="IsActive" value="true" checked />
                                </div>
                                <div class="form-group">
                                    <p>@L("DefaultPasswordIs", NEXARC.Authorization.Users.User.DefaultPassword)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="TenantEditModal" tabindex="-1" tenant="dialog" aria-labelledby="TenantEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" tenant="document">
        <div class="modal-content">
        </div>
    </div>
</div>
